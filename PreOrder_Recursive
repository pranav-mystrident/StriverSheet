/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
 
class Solution {
public:
    //the output demands us to return an array or rather a vector, thus the return function must be of vector type, the vector must collect a root and then return the preorder therefore
    //we must also create a vector and keep pushing back the values inside that vector using a separate function for preorder pofn
    //pofn will collect a root node and then will act as recursive preorder function which will keep updating the vector with preorder output

    vector<int> ans;

    void pofn(TreeNode* root){
        if(root==nullptr){
            return;//if the root is null ptr like say left node is nullptr, this line helps us backtrack
        }
        ans.push_back(root->val);
        pofn(root->left);
        pofn(root->right);
    }

    vector<int> preorderTraversal(TreeNode* root){
        pofn(root);
        return ans;
    }
};
